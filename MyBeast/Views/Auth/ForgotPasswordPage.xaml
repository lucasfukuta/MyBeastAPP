<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyBeast.Views.Auth.ForgotPasswordPage"
             Title="Redefinir Senha">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Voltar" Command="{Binding BackCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Página de Redefinição de Senha" FontSize="20" />
            <Entry Placeholder="Digite seu e-mail" WidthRequest="250" Margin="0,10,0,0" />
            <Button Text="Redefinir Senha" Margin="0,10,0,0" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
