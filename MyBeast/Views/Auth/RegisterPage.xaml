<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyBeast.Views.Auth.RegisterPage"
             BackgroundColor="#f4f4f9"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <!-- TÃ­tulo -->
            <VerticalStackLayout>
                <Label Text="MyBeast Fitness ðŸ’ª" FontSize="28" TextColor="DarkSalmon" HorizontalTextAlignment="Center" />
                <Label Text="Criar uma nova conta" FontSize="20" TextColor="Gray" HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <!-- Nome -->
            <StackLayout Orientation="Horizontal">
                <Frame HasShadow="True" Padding="0" BorderColor="White" HeightRequest="45" HorizontalOptions="FillAndExpand">
                    <Entry Margin="20,0,0,0" VerticalOptions="Center" Placeholder="Nome" />
                </Frame>
            </StackLayout>

            <!-- Email -->
            <StackLayout Orientation="Horizontal">
                <Frame HasShadow="True" Padding="0" BorderColor="White" HeightRequest="45" HorizontalOptions="FillAndExpand">
                    <Entry Margin="20,0,0,0" VerticalOptions="Center" Placeholder="Email" Keyboard="Email" />
                </Frame>
            </StackLayout>

            <!-- Senha -->
            <StackLayout Orientation="Horizontal">
                <Frame HasShadow="True" Padding="0" BorderColor="White" HeightRequest="45" HorizontalOptions="FillAndExpand">
                    <Entry Margin="20,0,0,0" VerticalOptions="Center" Placeholder="Senha" IsPassword="True" />
                </Frame>
            </StackLayout>

            <!-- BotÃ£o de Registro -->
            <Button Text="Registrar" WidthRequest="350" CornerRadius="25" HorizontalOptions="Center" BackgroundColor="LightSalmon" />

            <!-- Feedback de Carregamento -->
            <ActivityIndicator x:Name="LoadingIndicator" IsVisible="False" IsRunning="False" Color="DarkSalmon" HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
