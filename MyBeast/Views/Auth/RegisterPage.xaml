<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MyBeast.ViewModels.Auth"
             x:Class="MyBeast.Views.Auth.RegisterPage"
             BackgroundColor="#150016">

    <VerticalStackLayout Spacing="20" VerticalOptions="Center" Padding="30">

        <Label Text="Página de Registro" 
               FontSize="28" 
               TextColor="White" 
               HorizontalOptions="Center" 
               Margin="0,0,0,30"/>

        <Entry Placeholder="Nome de Usuário" 
               PlaceholderColor="#999"
               Text="{Binding Username}" 
               TextColor="White"
               BackgroundColor="Transparent"/>
        <BoxView HeightRequest="1" Color="#4A148C" />

        <Entry Placeholder="Email" 
               PlaceholderColor="#999"
               Text="{Binding Email}" 
               Keyboard="Email"
               TextColor="White"
               BackgroundColor="Transparent"/>
        <BoxView HeightRequest="1" Color="#4A148C" />

        <Entry Placeholder="Senha" 
               PlaceholderColor="#999"
               Text="{Binding Password}" 
               IsPassword="True"
               TextColor="White"
               BackgroundColor="Transparent"/>
        <BoxView HeightRequest="1" Color="#4A148C" />

        <Entry Placeholder="Confirmar Senha" 
               PlaceholderColor="#999"
               Text="{Binding ConfirmPassword}" 
               IsPassword="True"
               TextColor="White"
               BackgroundColor="Transparent"/>
        <BoxView HeightRequest="1" Color="#4A148C" />

        <Button Text="Registrar" 
                Command="{Binding RegisterUserCommand}" 
                BackgroundColor="#FF4081" 
                TextColor="White" 
                CornerRadius="25" 
                HeightRequest="50" 
                Margin="0,30,0,0"/>

        <Button Text="Já tem uma conta? Faça Login"
                Command="{Binding BackCommand}"
                BackgroundColor="Transparent"
                TextColor="#D1C4E9"
                FontSize="14"
                HeightRequest="40"
                Margin="0,5,0,0"/>

        <Label Text="{Binding ErrorMessage}" 
               TextColor="Red" 
               IsVisible="{Binding HasError}"
               HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>