<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyBeast.Views.Notifications.NotificationsPage"
             Title="Notificações"
             BackgroundColor="#1C1C1E">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Voltar" Clicked="OnBackButtonClicked" />
    </ContentPage.ToolbarItems>
    <ScrollView>
        <VerticalStackLayout>
            <Label 
                Text="Página de Notificações"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                TextColor="White"
                FontSize="24" />

            <CollectionView ItemsSource="{Binding Notifications}" Margin="20,0,20,20">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#2C2C2E" CornerRadius="10" Padding="15" Margin="0,5">
                            <Grid ColumnDefinitions="Auto, *, Auto">
                                <Image Grid.Column="0" Source="{Binding Icon}" HeightRequest="30" WidthRequest="30" VerticalOptions="Center" />
                                <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0">
                                    <Label Text="{Binding Title}" TextColor="White" FontSize="16" FontAttributes="Bold" />
                                    <Label Text="{Binding Message}" TextColor="LightGray" FontSize="14" />
                                </VerticalStackLayout>
                                <Label Grid.Column="2" Text="{Binding Timestamp, StringFormat='{0:h}h atrás'}" TextColor="DarkGray" FontSize="12" VerticalOptions="Center" HorizontalOptions="End" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>