<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyBeast.Views.Workout.ActiveWorkoutPage"
             Title="Treino em andamento"
             BackgroundColor="#1C1C1E">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="{Binding WorkoutName}" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   HorizontalOptions="Center" 
                   HorizontalTextAlignment="Center"/>

            <Image Source="pet_workout.gif"
                   IsAnimationPlaying="{Binding CanPause}"
                   HeightRequest="220"
                   WidthRequest="220"
                   HorizontalOptions="Center"
                   Aspect="AspectFit"
                   Margin="0,10,0,0"/>

            <Label Text="{Binding WorkoutTime}" 
                   FontSize="60" 
                   FontAttributes="Bold" 
                   TextColor="#00E676" 
                   HorizontalOptions="Center"
                   FontFamily="OpenSansSemibold"/>

            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center" Margin="0,0,0,15">
                <Button Text="▶" 
                        Command="{Binding StartCommand}" 
                        IsEnabled="{Binding CanStart}" 
                        BackgroundColor="#FF4500" 
                        TextColor="White" 
                        CornerRadius="30" 
                        HeightRequest="60" 
                        WidthRequest="60"
                        FontSize="20"/>

                <Button Text="⏸" 
                        Command="{Binding PauseCommand}" 
                        IsEnabled="{Binding CanPause}" 
                        BackgroundColor="#333333" 
                        TextColor="White" 
                        CornerRadius="30" 
                        HeightRequest="60" 
                        WidthRequest="60"
                        FontSize="20"/>

                <Button Text="⏹" 
                        Command="{Binding FinishCommand}" 
                        IsEnabled="{Binding CanFinish}" 
                        BackgroundColor="#333333" 
                        TextColor="#FF453A" 
                        CornerRadius="30" 
                        HeightRequest="60" 
                        WidthRequest="60"
                        FontSize="20"/>
            </HorizontalStackLayout>

            <Frame BackgroundColor="#2C2C2E" CornerRadius="10" Padding="10" HorizontalOptions="Fill">
                <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                    <HorizontalStackLayout Spacing="5">
                        <Image Source="fire_solid.svg" HeightRequest="15" WidthRequest="15" VerticalOptions="Center"/>
                        <Label Text="{Binding CaloriesBurned, StringFormat='~{0} kcal'}" TextColor="LightGray" FontSize="14"/>
                    </HorizontalStackLayout>

                    <BoxView WidthRequest="1" Color="Gray" HeightRequest="15" VerticalOptions="Center"/>

                    <HorizontalStackLayout Spacing="5">
                        <Image Source="dumbbell_solid.svg" HeightRequest="15" WidthRequest="15" VerticalOptions="Center"/>
                        <Label Text="{Binding Exercises.Count, StringFormat='{0} exercícios'}" TextColor="LightGray" FontSize="14"/>
                    </HorizontalStackLayout>
                </HorizontalStackLayout>
            </Frame>

            <Label Text="Sequência" TextColor="Gray" FontSize="14" Margin="0,10,0,0"/>

            <CollectionView ItemsSource="{Binding Exercises}" HeightRequest="250">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#252525" CornerRadius="10" Padding="15" Margin="0,0,0,10" BorderColor="#333">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" TextColor="White" />
                                <Label Text="{Binding Description}" FontSize="12" TextColor="Gray" />
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{Binding Sets, StringFormat='Séries: {0}'}" FontSize="12" TextColor="#9747FF" />
                                    <Label Text="{Binding Reps, StringFormat='Reps: {0}'}" FontSize="12" TextColor="#9747FF" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>