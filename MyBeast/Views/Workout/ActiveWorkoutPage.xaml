<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MyBeast.ViewModels.Workout"
             xmlns:model="clr-namespace:MyBeast.Domain.Entities;assembly=MyBeast.Domain"
             x:Class="MyBeast.Views.Workout.ActiveWorkoutPage"
             Title="Treino em Andamento"
             x:DataType="vm:ActiveWorkoutViewModel">

    <Grid RowDefinitions="Auto, Auto, *, Auto" Padding="15" RowSpacing="10">

        <Frame Grid.Row="0" BackgroundColor="{StaticResource Primary}" Padding="10" CornerRadius="10">
            <Label Text="{Binding TimerText}" 
                   HorizontalOptions="Center"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"/>
        </Frame>

        <VerticalStackLayout Grid.Row="1" Spacing="10">
            <Label Text="Adicionar Série" FontAttributes="Bold" />
            <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                <Picker Grid.Column="0" 
                        Title="Selecione o exercício"
                        ItemsSource="{Binding AvailableExercises}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedExercise}" />

                <Button Grid.Column="1" 
                        Text="+" 
                        Command="{Binding AddSetCommand}" 
                        WidthRequest="50"/>
            </Grid>
        </VerticalStackLayout>

        <CollectionView Grid.Row="2" ItemsSource="{Binding CurrentSets}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:SetLog">
                    <Frame Margin="0,5" Padding="10" BorderColor="LightGray" CornerRadius="5">
                        <Grid ColumnDefinitions="2*, 1*, 1*" ColumnSpacing="10" VerticalOptions="Center">
                            <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                                <Label Text="{Binding Exercise.Name}" FontAttributes="Bold"/>
                                <Label Text="{Binding SetNumber, StringFormat='Série {0}'}" FontSize="12" TextColor="Gray"/>
                            </VerticalStackLayout>

                            <Entry Grid.Column="1" 
                                   Placeholder="Kg" 
                                   Text="{Binding Weight}" 
                                   Keyboard="Numeric" 
                                   HorizontalTextAlignment="Center"/>

                            <Entry Grid.Column="2" 
                                   Placeholder="Reps" 
                                   Text="{Binding Reps}" 
                                   Keyboard="Numeric" 
                                   HorizontalTextAlignment="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="3"
                Text="FINALIZAR TREINO"
                Command="{Binding FinishWorkoutCommand}"
                BackgroundColor="Red"
                TextColor="White"
                HeightRequest="50"
                CornerRadius="25"/>
    </Grid>
</ContentPage>