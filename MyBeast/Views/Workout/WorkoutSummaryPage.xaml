<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyBeast.Views.Workout.WorkoutSummaryPage"
             Title="Resumo do Treino"
             BackgroundColor="#1C1C1E">

    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="10">

        <!-- Cabeçalho do Resumo -->
        <Frame Grid.Row="0" BackgroundColor="#2C2C2E" CornerRadius="10" Padding="15" Margin="20,20,20,0">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="{Binding WorkoutName}" TextColor="White" FontSize="18" FontAttributes="Bold" />
                    <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                        <Image Source="clock_regular.svg" HeightRequest="15" WidthRequest="15" />
                        <Label Text="{Binding Duration}" TextColor="LightGray" FontSize="14" VerticalOptions="Center" />
                        <Image Source="fire_solid.svg" HeightRequest="15" WidthRequest="15" Margin="10,0,0,0" />
                        <Label Text="{Binding CaloriesBurned}" TextColor="LightGray" FontSize="14" VerticalOptions="Center" />
                        <Image Source="dumbbell_solid.svg" HeightRequest="15" WidthRequest="15" Margin="10,0,0,0" />
                        <Label Text="{Binding Exercises.Count, StringFormat='{0} exercícios'}" TextColor="LightGray" FontSize="14" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
                <Frame Grid.Column="1" BackgroundColor="{Binding LevelColor}" CornerRadius="5" Padding="5,2" HorizontalOptions="End" VerticalOptions="Start">
                    <Label Text="{Binding Level}" TextColor="White" FontSize="12" FontAttributes="Bold" />
                </Frame>
            </Grid>
        </Frame>

        <!-- Lista de Exercícios Realizados -->
        <ScrollView Grid.Row="1" Margin="20,0,20,0">
            <VerticalStackLayout Spacing="10">
                <Label Text="Exercícios Realizados" TextColor="White" FontSize="16" FontAttributes="Bold" Margin="0,0,0,5"/>
                <CollectionView ItemsSource="{Binding Exercises}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#2C2C2E" CornerRadius="10" Padding="15">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Name}" TextColor="White" FontSize="16" FontAttributes="Bold" />
                                    <Label Text="{Binding Description}" TextColor="LightGray" FontSize="14" />
                                    <Label Text="Séries: {Binding Sets}  Reps: {Binding Reps}" TextColor="LightGray" FontSize="14" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Botão de ação -->
        <Button Grid.Row="2" Text="Concluir" BackgroundColor="#FF4500" TextColor="White" FontSize="16" CornerRadius="25" HeightRequest="50" Margin="20,0,20,20" Command="{Binding FinishCommand}" />

    </Grid>
</ContentPage>
