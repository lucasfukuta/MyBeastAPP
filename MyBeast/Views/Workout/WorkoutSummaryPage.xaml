<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MyBeast.ViewModels.Workout"
             x:Class="MyBeast.Views.Workout.WorkoutSummaryPage"
             Title="Resumo"
             BackgroundColor="{StaticResource Secondary}"
             x:DataType="vm:WorkoutSummaryViewModel">

    <VerticalStackLayout Spacing="20" VerticalOptions="Center" Padding="30">

        <Image Source="dotnet_bot.png" 
               HeightRequest="150" 
               HorizontalOptions="Center" />

        <Label Text="TREINO CONCLUÍDO!" 
               FontSize="28" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               TextColor="{StaticResource Primary}"/>

        <Label Text="{Binding MotivationalMessage}" 
               FontSize="18" 
               HorizontalOptions="Center" 
               HorizontalTextAlignment="Center" 
               TextColor="White"/>

        <Frame BackgroundColor="White" CornerRadius="15" Padding="20" Margin="0,20">
            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, *" RowSpacing="15">

                <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                    <Label Text="Duração" TextColor="Gray" FontSize="12"/>
                    <Label Text="{Binding Session.DurationMinutes, StringFormat='{0} min'}" 
                           FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="0" Grid.Column="1">
                    <Label Text="Volume" TextColor="Gray" FontSize="12"/>
                    <Label Text="{Binding Session.TotalVolume, StringFormat='{0} kg'}" 
                           FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <Button Text="VOLTAR PARA O INÍCIO" 
                Command="{Binding GoHomeCommand}"
                BackgroundColor="{StaticResource Primary}"
                CornerRadius="25"
                HeightRequest="50"/>

    </VerticalStackLayout>
</ContentPage>